<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="Forums Board Inspector, Gadget">
        <Require feature="dynamic-height"/>
        <Require feature='setprefs'/>
        <Require feature='tabs'/>
    </ModulePrefs>
    <UserPref name="url" display_name="Board URL" default_value="http://forums.asat.co.il" />
    <UserPref name="selForums" datatype="hidden" default_value="" />
    <UserPref name="selTopics" datatype="hidden" default_value="" />
    <UserPref name="nTopics" display_name="# Topics to show" default_value="10" />
    <UserPref name="defTab" display_name="Default tab" datatype="enum" default_value="0">
	    <EnumValue value="0" display_value="Forums"/>
	    <EnumValue value="1" display_value="Starred"/>
	    <EnumValue value="2" display_value="Latest Topics"/>
	    <EnumValue value="3" display_value="Recently Updated"/>
	    <EnumValue value="4" display_value="Most Views"/>
	    <EnumValue value="5" display_value="Most Posts"/>
	    <EnumValue value="6" display_value="Board Info"/>
    </UserPref>
   
    <Content type="html"><![CDATA[
		<link rel="stylesheet" type="text/css" href="http://foruminspector.googlecode.com/svn/trunk/tabs.css" />
