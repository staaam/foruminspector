function splitKeys(str) {
    var map = new Object();
    var s = str.split(";");
    for (var i in s) {
        if (s[i].length > 0) {
        	var a = s[i].split("=");
            map[a[0]] = a[1];
        }
    }
    return map;
}

function joinKeys(map) {
    var str = "";
    for (var i in map) {
        if (map[i]) {
            str += i + "=" + map[i] + ";";
        }
    }
    return str;
}

